{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../",
    "paths": {
      "@common/*": ["common/*"]
    }
  },
  "include": ["src/**/*", "../common/**/*"],
  "exclude": ["node_modules"]
}
